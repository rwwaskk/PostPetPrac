<div id="post_form_container">
<div id="post_form">
<%= form_for @outgoing,:method=>:post do |f| %>
   <div class="field">
     <%= f.text_field :title%>
     <%= f.text_area :content,:rows=>15 %>
     <%= f.hidden_field :to_id, :value=> params[:to_id] %>
    
  </div>
  <%= f.submit "Send",class: "test" %>
<% end %>
</div>
</div>
</div>