<h1>Microposts</h1>
<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
        <th>
      <%= t("activerecord.attributes.micropost.content", :default => t("activerecord.labels.content", :default => "Content")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @microposts.each do |micropost| -%>
   <tr>
    <td><%= micropost.id %></td>
        <td><%= link_to micropost.content, micropost_path(micropost) %>
    </td>
        <td><%= micropost.created_at %></td>
    <td>
      <%= link_to "Show", micropost_path(micropost) %>
      <%= link_to "Edit", edit_micropost_path(micropost) %>
      <%= link_to "Destroy", micropost_path(micropost), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_micropost_path, :class => 'btn btn-primary' %>
