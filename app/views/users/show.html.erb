<div id="userInfo">
	
	<% if !(@user.photo.url=="/photos/original/missing.png")%>
		<%= image_tag @user.photo.url(:small)%>
	<%else%>
		<%= image_tag "https://lh5.googleusercontent.com/-niEejNWekPM/UPSk_V4rq1I/AAAAAAAAAoc/60oFt5Dhb5c/s512/touxiang.jpg"%>
