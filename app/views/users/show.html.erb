     	 <p>posts (<%= @user.microposts.count %>)</p>
     	 <div id="microposts">
     	 <%= render @user.microposts.desc %>
     	 </div>
      	 <% end %>
     	
     	
     	
     	 <% if !@user.albums.any? %>
		 <p>no albums</p>
		 <%end%>
   		 <% if @user.albums.any? %>
     	 <p>albums (<%= @user.albums.count %>)</p>
     	 <%= render @user.albums %>
         <% end %>
  

