<%#=render 'layouts/notify'%>
<div id="userInfo">
	<% if !(@user.photo.url=="/photos/original/missing.png")%>
		<%= image_tag @user.photo.url(:small)%>
	<%end%><br/>
	<%= @user.name %><br/>
	<%= render 'shared/stats' %>
	<%= link_to 'send a message', :controller=>'outgoings',:action=>'new',:to_id=>@user%>
</div>

<%=render  'my_nav'%> 
		<% if !@user.microposts.any? %>
		 <p>no posts</p>
		 <%end%>
   		  
   		 <% if @user.microposts.any? %>
     	 <p>posts (<%= @user.microposts.count %>)</p>
     	 <div id="microposts">
     	 <%= render @microposts %>
     	 </div>
      	 <% end %>
     	
     	
     	
     	 <% if !@user.albums.any? %>
		 <p>no albums</p>
		 <%end%>
   		 <% if @user.albums.any? %>
     	 <p>albums (<%= @user.albums.count %>)</p>
     	 <%= render @user.albums %>
         <% end %>
  

