<p id="notice"><%= notice %></p>

<div id="container">

	<div id="header" >
		<div id="mainnav"><%=render 'layouts/navigation'%></div>
		<%= link_to image_tag('https://lh4.googleusercontent.com/-YHDuoBzZcj8/UBNXSLcs06I/AAAAAAAAAXA/92EYJXTEtIU/s170/cooltext736144688.jpg'), root_path, :class => 'brand' %>
	</div>

	<div id="horizontal_nav">
		<% if user_signed_in? %>
		
		<%= link_to 'change my info |', edit_user_path(@user) %>
		<%= link_to '|  arf arf', new_micropost_path %> 
		<%= link_to '|  i want to make a new album', new_album_path %> 
		<%end%>
	</div>


	<div id="feeds">

		<% if !@user.microposts.any? %>
		 <h2>im too lazy to say anything </h2>
		 <%end%>
   		  <% if @user.microposts.any? %>
     	 <h2>posts (<%= @user.microposts.count %>)</h2>
     	 
     	 <ol class="microposts">
        <%= render @microposts %>
      	</ol>
     	<% end %>
     	
     	
     	
     	<% if !@user.albums.any? %>
		 <h2>im too shy to show my photos </h2>
		 <%end%>
   		  <% if @user.albums.any? %>
     	 <h2>albums (<%= @user.albums.count %>)</h2>
     	 
     	 <ol class="microposts">
        <%= render @user.albums %>
      	</ol>
     	<% end %>
    </div>

	<div id="links">
	
	<% if !(@user.photo.url=="/photos/original/missing.png")%>
	<%= image_tag @user.photo.url(:small)%>
	<%end%>
	<p id="name"><%= @user.name %></p>
	<%= render 'shared/stats' %>
	<%=link_to 'send a message', :controller=>'outgoings',:action=>'new',:to_id=>@user%>
    </div>  
    

<div id="footer">
	<%= render 'layouts/down'%>
</div>
	
	
	

</div>
