<%= form_for Event.new,:html=>{:style=>"display:none",:id=>'new_event_form'} do |f| %>
	<%= f.text_area :name, placeholder: "new event name",:rows=>2 %><br/>
	<%= f.text_area :description,placeholder: "new event descript",:rows=>3%></br>
	<%= f.submit 'create' ,:class=>"btn btn-primary btn-large pull-left"%>
	<%= link_to 'Cancel', '#', :onclick => "$('#new_event_form').slideUp()" %>
<% end %>
