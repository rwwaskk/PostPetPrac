<% if user_signed_in? %>
	<li class="dropdown">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i>Account<b class="caret"></b></a>
	<ul class="dropdown-menu">
	<li><%=link_to " ", :controller=>'messages',:action=>'index' do%>
	<i class="icon-envelope"></i> message
	<%end%></li>
	<li><%=link_to '#',:remote=>true,:id=>"notification__details_link",
  		        :onclick=>"$('#notification_list').toggle();" do%>
  		  <i class="icon-leaf"></i> notifications
  		  <%end%>
		<span id="notify"><%= render 'layouts/notification'%></span> 
		<div id="notification_list">
	    	<%= render @notifications%>
		</div>
	</li>
	<li><%= link_to 'sign out', destroy_user_session_path, :method=>'delete' %> </li>
	</ul>
</li>
	
<%else%>
	<%= link_to 'sign in', new_user_session_path %>    
<%end%>
	